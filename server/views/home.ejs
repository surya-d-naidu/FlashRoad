<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - FlashRoad</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header>
    <h1>FlashRoad - Find Your Products</h1>
    <nav>
      <a href="/">Home</a> | <a href="/cart">Cart</a> | <a href="/profile">Profile</a>
    </nav>
    <!-- Search Bar -->
    <div class="search-bar-container">
      <input type="text" id="searchQuery" placeholder="Search for products..." oninput="filterProducts()">
    </div>
  </header>

  <main>
    <h2>Available Products</h2>
    <div class="product-list" id="product-list">
      <% if (products && products.length > 0) { %>
        <% products.filter(product => product.stock > 0).forEach(function(product) { %> <!-- Filter out out-of-stock products -->
          <div class="product-item" data-name="<%= product.name %>" data-description="<%= product.description %>">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image" />
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
            <p><strong>Price: </strong>â‚¹<%= product.price.toFixed(2) %></p>
            <p><strong>Stock: </strong><%= product.stock %></p>
            <a href="/product/<%= product._id %>">View Details</a>
          </div>
        <% }) %>
      <% } else { %>
        <p>No products available yet. Check back soon!</p>
      <% } %>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 FlashRoad. All rights reserved.</p>
  </footer>
  <script>
    const products = <%- JSON.stringify(products) %>;
  </script>
  <script src="/js/home.js"></script>
</body>
</html>
